# MongoDB - Using host machine's MongoDB (accessible from Docker)
# For production, use MongoDB Atlas URI
MONGODB_URI=mongodb://host.docker.internal:27017/surveyapp

# Google OAuth - Get from Google Cloud Console
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# JWT
JWT_SECRET=your_jwt_secret_here_use_long_random_string
JWT_EXPIRES_IN=7d

# Email (Gmail) - Use App Password
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here

# App
PORT=5000
NODE_ENV=production
FRONTEND_URL=http://localhost:3000

# Gemini AI - Get from Google AI Studio
GEMINI_API_KEY=your_gemini_api_key_here

# For production, set SERVE_STATIC=true to serve React build from Express
SERVE_STATIC=true
